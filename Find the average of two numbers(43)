
import java.util.*;
class Avg{
    public static void main(String[] args){
        Scanner sc=new Scanner(System.in);
        float a=sc.nextFloat();
        float b=sc.nextFloat();
        float sum=a+b;
        float avg=sum/2;
        System.out.printf("%.4f",avg);
        sc.close();
        
    }
}
