
import java.util.*;
class Avg{
    public static void main(String[] args){
        Scanner sc=new Scanner(System.in);
        int n=sc.nextInt();
        int[] a=new int[n];

        for(int i=0;i<n;i++){
            a[i]=sc.nextInt();
        }
        double avg;
        double sum=0.0;
        for(int i=0;i<n;i++){
            sum+=a[i];
        }
        avg=sum/n;
        System.out.printf("%.2f", avg);
        sc.close();
    }
}
